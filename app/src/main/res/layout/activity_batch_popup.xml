<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/infoText6"
            android:padding="5dp"
            android:gravity="left"
            android:textSize="11dp"
            android:textColor="@color/defaultFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/batch_popup_message1"
            />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            />
        <TextView
            android:typeface="normal"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/infoText"
            />
        <TextView
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/infoText2"
            />
        <TextView
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/infoText3"
            />
        <TextView
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/infoText4"
            />
        <TextView
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/infoText5"
            />
        <LinearLayout
            android:gravity="right"
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:bootstrapText="{fa_stop} Stop"
                app:bootstrapBrand="primary"
                app:roundedCorners="true"
                app:bootstrapSize="sm"
                android:id="@+id/stop"
                />
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:bootstrapText="{fa_close} Close"
                app:bootstrapBrand="primary"
                app:roundedCorners="true"
                app:bootstrapSize="sm"
                android:id="@+id/close"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>